<h2>List of Contacts</h2>

<% @list.each do |contact| %>
    <h4>Contact: <%= contact.last_name%>, <%= contact.first%></h4>
    <h5>A <%= contact.job%> at <%= contact.company%></h5>
    <h5>Type of Contact: <%= contact.contact_type%></h5>
<% end %>
<form action="/" method="post">
  <div class="form-group">
    <label for="first_name">First Name</label>
    <input id="first_name" name="first_name" class="form-control" type="text">
  </div>
  <div class="form-group">
    <label for="last_name">Last Name</label>
    <input id="last_name" name="last_name" class="form-control" type="text">
  </div>
  <div class="form-group">
    <label for="job">Job</label>
    <input id="job" name="job" class="form-control" type="text">
  </div>
  <div class="form-group">
    <label for="company">Company</label>
    <input id="company" name="company" class="form-control" type="text">
  </div>
  <div class="form-group">
    <label for="contact_type">Contact Type (e.g. business, personal, etc.)</label>
    <input id="contact_type" name="contact_type" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Go!</button>
</form>
<form action="/clear" method="post">
  <button type="submit" class="btn">Clear List</button>
</form>
<h2><%= @alert_message %></h2>
